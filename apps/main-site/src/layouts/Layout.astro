---
import '@roolipeli/design-system/tokens.css';
import '@roolipeli/design-system/grid.css';

interface Props {
  title: string;
  lang?: string;
}

const { title, lang = 'fi' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="grid-layout">
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family: var(--kide-font-sans);
    background-color: var(--kide-paper);
    color: var(--kide-ink-primary);
    margin: 0;
    /* padding handled by grid layout */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--kide-font-serif);
    color: var(--kide-ink-header);
    letter-spacing: -0.02em;
  }

  h1 {
    border-bottom: 3px solid var(--kide-ice-light);
    padding-bottom: var(--kide-space-2);
    margin-bottom: var(--kide-space-4);
  }
</style>
