---
import '@roolipeli/design-system/preflight.css';
import '@roolipeli/design-system/tokens.css';
import '@roolipeli/design-system/typography.css';
import '@roolipeli/design-system/grid.css';
import SiteHeader from '@roolipeli/design-system/components/SiteHeader.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/utils';

interface Props {
  title: string;
  lang?: 'fi' | 'en' | 'sv';
}

const { title, lang = 'fi' } = Astro.props;
const t = useTranslations(lang);

import { createSupabaseServerClient } from '../lib/supabase';

const supabase = createSupabaseServerClient(Astro);
const {
  data: { user },
} = await supabase.auth.getUser();

let profileDisplayName = undefined;
if (user) {
  // Fetch profile - may not exist for users created before the trigger was added
  const { data: profile, error: profileError } = await supabase
    .from('profiles')
    .select('display_name')
    .eq('id', user.id)
    .maybeSingle(); // Use maybeSingle() instead of single() to avoid error if no row exists

  if (!profileError) {
    profileDisplayName = profile?.display_name;
  }
}
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script is:inline>
      // Handle Supabase auth errors (e.g., expired magic link)
      // These come as hash fragments which aren't sent to the server
      (function() {
        const hash = window.location.hash;
        const params = new URLSearchParams(window.location.search);
        const hashParams = new URLSearchParams(hash.replace('#', ''));

        const errorCode = params.get('error_code') || hashParams.get('error_code');
        if (errorCode === 'otp_expired' || errorCode === 'access_denied') {
          window.location.href = '/kirjaudu?error=link_expired';
        }
      })();
    </script>
  </head>
  <body>
    <SiteHeader siteName="Roolipeli.info">
      <ul class="site-header__nav">
        <li>
          <a href="/tuotteet" class="site-header__link"
            >{t("nav.products.label")}</a
          >
        </li>
        <li>
          <a href="/kustantajat" class="site-header__link"
            >{t("nav.publishers.label")}</a
          >
        </li>
        <li>
          <a href="/tekijat" class="site-header__link"
            >{t("nav.creators.label")}</a
          >
        </li>
      </ul>
      {
        user ? (
          <>
            <a href="/tili" class="site-header__link">
              {profileDisplayName || user.email || t("nav.account")}
            </a>
            <a
              href="/logout"
              class="site-header__btn site-header__btn--secondary"
            >
              {t("nav.logout")}
            </a>
          </>
        ) : (
          <a
            href="/kirjaudu"
            class="site-header__btn site-header__btn--primary"
          >
            {t("nav.login")}
          </a>
        )
      }
    </SiteHeader>
    <main class="grid-layout" style="margin-top:var(--kide-space-4)">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>

<style is:global>
  body {
    font-family: var(--kide-font-sans);
    background-color: var(--kide-paper);
    color: var(--kide-ink-primary);
    margin: 0;
    /* padding handled by grid layout */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--kide-font-serif);
    color: var(--kide-ink-header);
    letter-spacing: -0.02em;
  }

  h1 {
    border-bottom: 3px solid var(--kide-ice-light);
    padding-bottom: var(--kide-space-2);
    margin-bottom: var(--kide-space-4);
  }
</style>
