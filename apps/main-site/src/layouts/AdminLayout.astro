---
import AdminNav from '../components/admin/AdminNav.astro';
import '@roolipeli/design-system/preflight.css';
import '@roolipeli/design-system/tokens.css';
import '@roolipeli/design-system/components/input.css';
import '../styles/admin-forms.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body>
        <div class="admin-layout">
            <AdminNav />
            <main class="admin-main">
                <slot />
            </main>
        </div>
    </body>
</html>

<style is:global>
    body {
        font-family: var(--kide-font-sans);
        background-color: var(--kide-paper);
        color: var(--kide-ink-primary);
        margin: 0;
        padding: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: var(--kide-font-serif);
        color: var(--kide-ink-header);
        letter-spacing: var(--kide-tracking-tight);
    }

    h1 {
        border-bottom: 3px solid var(--kide-ice-light);
        padding-bottom: var(--kide-space-2);
        margin-bottom: var(--kide-space-4);
    }

    .admin-layout {
        display: flex;
        min-height: 100vh;
    }

    .admin-main {
        flex-grow: 1;
        padding: var(--kide-space-8);
        background-color: var(
            --kide-paper
        ); /* Ensure main area also has proper background */
    }
</style>
