---
import { useTranslations } from '../i18n/utils';
import Layout from '../layouts/Layout.astro';
import '@roolipeli/design-system/components/card.css';
import '@roolipeli/design-system/components/tag.css';

const t = useTranslations(Astro.currentLocale);
const deletedMessage = Astro.url.searchParams.get('deleted');
---

<Layout title={t("home.title")} lang={Astro.currentLocale}>
  <main>
    {deletedMessage && (
      <div class="message success" role="status">{deletedMessage}</div>
    )}
    <h1>{t("home.welcome")}</h1>
    <p
      style="margin-bottom: var(--kide-space-6); font-size: 1.125rem; line-height: 1.6;"
    >
      {t("home.tagline")}
    </p>

    <div style="display: grid; gap: var(--kide-space-4);">
      <div class="card">
        <span class="label">{t("home.mission.label")}</span>
        <strong
          style="display: block; margin-bottom: var(--kide-space-2); font-size: 1.25rem;"
        >
          {t("home.mission.title")}
        </strong>
        <p style="margin: 0; color: var(--kide-ink-muted); line-height: 1.5;">
          {t("home.mission.description")}
        </p>
      </div>

      <div style="display: flex; gap: var(--kide-space-2); flex-wrap: wrap;">
        <span class="tag">{t("home.lang.fi")}</span>
        <span class="tag">{t("home.lang.sv")}</span>
        <span class="tag">{t("home.lang.en")}</span>
      </div>
    </div>

    <div
      style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--kide-space-4); margin-top: var(--kide-space-8);"
    >
      <a href="/tuotteet" class="card nav-card">
        <span class="label">{t("nav.products.label")}</span>
        <strong>{t("nav.products.title")}</strong>
        <p class="description">{t("nav.products.description")}</p>
      </a>

      <a href="/kustantajat" class="card nav-card">
        <span class="label">{t("nav.publishers.label")}</span>
        <strong>{t("nav.publishers.title")}</strong>
        <p class="description">{t("nav.publishers.description")}</p>
      </a>

      <a href="/tekijat" class="card nav-card">
        <span class="label">{t("nav.creators.label")}</span>
        <strong>{t("nav.creators.title")}</strong>
        <p class="description">{t("nav.creators.description")}</p>
      </a>
    </div>
  </main>
</Layout>

<style>
  .message {
    padding: var(--kide-space-4);
    border-radius: var(--kide-radius-sm);
    margin-bottom: var(--kide-space-6);
    font-weight: 500;
  }

  .message.success {
    background: var(--kide-success-bg);
    border: 1px solid var(--kide-success);
    color: var(--kide-ink-primary);
  }

  .nav-card {
    text-decoration: none;
    color: inherit;
  }

  .nav-card strong {
    display: block;
    font-size: 1.25rem;
    margin-bottom: var(--kide-space-1);
  }

  .nav-card .description {
    margin: 0;
    color: var(--kide-ink-muted);
    font-size: 0.875rem;
  }
</style>
