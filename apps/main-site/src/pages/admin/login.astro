---
import Layout from '../../layouts/Layout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';

const title = 'Kirjaudu sisään (Ylläpito)';
let errorMessage = '';
let successMessage = '';

// Redirect if already logged in
const supabase = createSupabaseServerClient(Astro);
const {
  data: { user },
} = await supabase.auth.getUser();
if (user?.app_metadata?.role === 'admin') {
  return Astro.redirect('/admin');
}

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString();

    if (!email) {
      errorMessage = 'Sähköposti vaaditaan';
    } else {
      const { error } = await supabase.auth.signInWithOtp({
        email,
        options: {
          emailRedirectTo: `${Astro.url.origin}/admin/auth/callback`,
        },
      });

      if (error) {
        errorMessage = error.message;
      } else {
        successMessage = 'Kirjautumislinkki lähetetty sähköpostiisi!';
      }
    }
  } catch (e) {
    errorMessage = e instanceof Error ? e.message : 'Tuntematon virhe';
  }
}
---

<Layout title={title}>
    <main class="container">
        <div class="auth-card">
            <h1>{title}</h1>

            {errorMessage && <p class="error">{errorMessage}</p>}
            {successMessage && <p class="success">{successMessage}</p>}

            {
                !successMessage && (
                    <form method="POST">
                        <div class="field">
                            <label for="email">Sähköpostiosoite</label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                placeholder="matti.meikalainen@esimerkki.fi"
                            />
                        </div>
                        <button type="submit" class="button">
                            Lähetä kirjautumislinkki
                        </button>
                    </form>
                )
            }

            <p class="back-link">
                <a href="/">← Takaisin etusivulle</a>
            </p>
        </div>
    </main>
</Layout>

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        padding: var(--kide-space-4);
    }

    .auth-card {
        background: var(--kide-surface);
        border: 1px solid var(--kide-ice-light);
        border-radius: var(--kide-radius-md);
        padding: var(--kide-space-6);
        box-shadow: var(--kide-shadow-soft);
        width: 100%;
        max-width: 400px;
    }

    h1 {
        font-size: 1.5rem;
        margin-bottom: var(--kide-space-4);
        text-align: center;
    }

    .field {
        margin-bottom: var(--kide-space-4);
    }

    label {
        display: block;
        font-size: 0.875rem;
        margin-bottom: var(--kide-space-1);
        color: var(--kide-ink-muted);
    }

    input {
        width: 100%;
        padding: var(--kide-space-2);
        border: 1px solid var(--kide-ice-light);
        border-radius: var(--kide-radius-sm);
        font-size: 1rem;
    }

    input:focus {
        outline: none;
        border-color: var(--kide-ice-mid);
        box-shadow: 0 0 0 2px var(--kide-ice-light);
    }

    .button {
        width: 100%;
        padding: var(--kide-space-2);
        background: var(--kide-ice-deep);
        color: white;
        border: none;
        border-radius: var(--kide-radius-sm);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .button:hover {
        background: var(--kide-ice-mid);
    }

    .error {
        color: var(--kide-danger);
        background: var(--kide-danger-bg);
        padding: var(--kide-space-2);
        border-radius: var(--kide-radius-sm);
        margin-bottom: var(--kide-space-4);
        font-size: 0.875rem;
    }

    .success {
        color: var(--kide-success);
        background: var(--kide-success-bg);
        padding: var(--kide-space-2);
        border-radius: var(--kide-radius-sm);
        margin-bottom: var(--kide-space-4);
        font-size: 0.875rem;
    }

    .back-link {
        margin-top: var(--kide-space-6);
        text-align: center;
        font-size: 0.875rem;
    }

    .back-link a {
        color: var(--kide-ink-muted);
        text-decoration: none;
    }

    .back-link a:hover {
        color: var(--kide-ice-deep);
    }
</style>
