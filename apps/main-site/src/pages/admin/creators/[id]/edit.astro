---
import Input from '@roolipeli/design-system/components/Input.svelte';
import { defaultLang, ui } from '../../../../i18n/ui';
import { useTranslations } from '../../../../i18n/utils';
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { createSupabaseServerClient } from '../../../../lib/supabase';

const { id } = Astro.params;
const lang = (Astro.currentLocale as keyof typeof ui) || defaultLang;
const t = useTranslations(lang);
const title = t('admin.creators.edit');

const supabase = createSupabaseServerClient(Astro);

if (!id) return Astro.redirect('/admin/creators');

const { data: creator, error } = await supabase.from('creators').select('*').eq('id', id).single();

if (error || !creator) {
  return Astro.redirect('/admin/creators?error=not_found');
}
---

<AdminLayout title={title}>
    <div class="page-header">
        <h1>{title}: {creator.name}</h1>
    </div>

    <form id="edit-form" class="admin-form" data-entity-id={id}>
        <div class="form-grid">
            <Input label="Name" name="name" value={creator.name} required />
            <Input
                label="Slug"
                name="slug"
                value={creator.slug}
                required
            />
        </div>

        <!-- No description field for creators -->

        <div class="form-actions">
            <a href="/admin/creators" class="btn-cancel">{t("admin.cancel")}</a>
            <button type="submit" class="btn-save">{t("admin.save")}</button>
        </div>
    </form>

    <script>
        import { logError } from '@roolipeli/logger';

        const form = document.getElementById("edit-form") as HTMLFormElement;
        const id = form?.dataset.entityId;

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch(`/api/admin/creators/${id}`, {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data),
                });

                if (res.ok) {
                    window.location.href = "/admin/creators?success=updated";
                } else {
                    const result = await res.json();
                    const msg = encodeURIComponent(String(result.error).slice(0, 200));
                    window.location.href = "/admin/creators?error=" + msg;
                }
            } catch (err) {
                logError('Creator update error:', err instanceof Error ? err.message : String(err));
                const msg = encodeURIComponent(err instanceof Error ? err.message.slice(0, 200) : 'Network error');
                window.location.href = "/admin/creators?error=" + msg;
            }
        });
    </script>
</AdminLayout>
