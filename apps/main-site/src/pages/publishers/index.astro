---
import { getPublishers } from '@roolipeli/database';

const publishers = await getPublishers();
---

<!doctype html>
<html lang="fi">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Kustantajat | Roolipeli.info</title>
        <meta name="description" content="Suomalaiset roolipelikus

tantajat" />
    </head>
    <body>
        <main>
            <h1>Kustantajat</h1>
            <ul class="publisher-list">
                {
                    publishers.map((publisher) => (
                        <li>
                            <h2>{publisher.name}</h2>
                            {publisher.description && (
                                <p>{publisher.description}</p>
                            )}
                        </li>
                    ))
                }
            </ul>
        </main>
    </body>
</html>

<style>
    body {
        margin: 0;
        padding: 2rem;
        font-family:
            system-ui,
            -apple-system,
            sans-serif;
    }

    main {
        max-width: 800px;
        margin: 0 auto;
    }

    h1 {
        margin-bottom: 2rem;
    }

    .publisher-list {
        list-style: none;
        padding: 0;
    }

    .publisher-list li {
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
    }

    .publisher-list h2 {
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
    }

    .publisher-list p {
        margin: 0;
        color: #666;
    }
</style>
