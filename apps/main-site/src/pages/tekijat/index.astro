---
import { getCreators } from '@roolipeli/database';
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';
import '@roolipeli/design-system/components/card.css';
import '@roolipeli/design-system/collection-grid.css';

const creators = await getCreators();
const t = useTranslations(Astro.currentLocale);
---

<Layout title={t("creators.title")} lang={Astro.currentLocale}>
    <main>
        <h1>{t("creators.heading")}</h1>
        <div
            class="kide-collection breakout"
            style="--kide-collection-min: 200px;"
        >
            {
                creators.map((creator) => (
                    <div class="card">
                        <h2 class="card__title">{creator.name}</h2>
                    </div>
                ))
            }
        </div>
    </main>
</Layout>
