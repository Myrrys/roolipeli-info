---
import '@roolipeli/design-system/components/footer.css';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'fi' | 'en' | 'sv';
}

const { lang = 'fi' } = Astro.props;
const t = useTranslations(lang);

const version = '0.3.5';
---

<footer class="site-footer" role="contentinfo">
    <div class="site-footer__inner">
        <div class="site-footer__grid">
            <div class="site-footer__column">
                <h4 class="site-footer__heading">{t('footer.resources')}</h4>
                <ul class="site-footer__list">
                    <li>
                        <a
                            href="https://github.com/roolipeli/roolipeli-info"
                            class="site-footer__link"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {t('footer.github')}
                        </a>
                    </li>
                </ul>
            </div>
            <div class="site-footer__column">
                <h4 class="site-footer__heading">{t('footer.legal')}</h4>
                <p class="site-footer__text">{t('footer.license')}</p>
                <p class="site-footer__text">{t('footer.opensource')}</p>
            </div>
            <div class="site-footer__column">
                <h4 class="site-footer__heading">{t('footer.project')}</h4>
                <p class="site-footer__text">Version {version}</p>
                <p class="site-footer__text">{t('footer.builtWith')}</p>
            </div>
        </div>
        <div class="site-footer__colophon">
            <p>{t('footer.copyright')}</p>
            <p>{t('footer.tagline')}</p>
        </div>
    </div>
</footer>
