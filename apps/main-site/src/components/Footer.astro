---
import '@roolipeli/design-system/components/footer.css';

// Get version from package.json
const version = '0.3.5';
---

<footer class="site-footer" role="contentinfo">
    <div class="site-footer__inner">
        <div class="site-footer__grid">
            <div class="site-footer__column">
                <h4 class="site-footer__heading">Resources</h4>
                <ul class="site-footer__list">
                    <li>
                        <a
                            href="https://github.com/roolipeli/roolipeli-info"
                            class="site-footer__link"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            GitHub Repository
                        </a>
                    </li>
                </ul>
            </div>
            <div class="site-footer__column">
                <h4 class="site-footer__heading">Legal</h4>
                <p class="site-footer__text">Licensed under MIT License</p>
                <p class="site-footer__text">Open source and free to use</p>
            </div>
            <div class="site-footer__column">
                <h4 class="site-footer__heading">Project</h4>
                <p class="site-footer__text">Version {version}</p>
                <p class="site-footer__text">Built with Kide Design System</p>
            </div>
        </div>
        <div class="site-footer__colophon">
            <p>© 2026 Roolipeli.info</p>
            <p>Made with ❄️ in Finland</p>
        </div>
    </div>
</footer>
