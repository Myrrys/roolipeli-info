---
import { defaultLang, ui } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

const { pathname } = Astro.url;
const lang = (Astro.currentLocale as keyof typeof ui) || defaultLang;
const t = useTranslations(lang);

const navItems = [
  { label: t('admin.dashboard'), href: '/admin' },
  { label: t('admin.products'), href: '/admin/products' },
  { label: t('admin.publishers'), href: '/admin/publishers' },
  { label: t('admin.creators'), href: '/admin/creators' },
];

const isActive = (href: string) => {
  if (href === '/admin') {
    return pathname === '/admin' || pathname === '/admin/';
  }
  return pathname.startsWith(href);
};
---

<nav class="admin-nav">
    <div class="nav-branding">
        <h2>Roolipeli.info</h2>
        <span class="admin-badge">Admin</span>
    </div>

    <ul class="nav-links">
        {
            navItems.map((item) => (
                <li>
                    <a
                        href={item.href}
                        class:list={[{ active: isActive(item.href) }]}
                    >
                        {item.label}
                    </a>
                </li>
            ))
        }
    </ul>

    <div class="nav-footer">
        <a href="/admin/logout" class="logout-link">{t("admin.logout")}</a>
        <a href="/" class="back-link">{t("admin.backToSite")}</a>
    </div>
</nav>

<style>
    .admin-nav {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background: var(--kide-surface);
        border-right: 1px solid var(--kide-ice-light);
        padding: var(--kide-space-4);
        min-width: 240px;
        position: sticky;
        top: 0;
    }

    .nav-branding {
        margin-bottom: var(--kide-space-8);
    }

    .nav-branding h2 {
        margin: 0;
        font-size: 1.25rem;
        color: var(--kide-ink-header);
    }

    .admin-badge {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: bold;
        text-transform: uppercase;
        background: var(--kide-ice-light);
        color: var(--kide-ice-deep);
        padding: 2px 8px;
        border-radius: var(--kide-radius-sm);
        margin-top: var(--kide-space-1);
    }

    .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
        flex-grow: 1;
    }

    .nav-links li {
        margin-bottom: var(--kide-space-2);
    }

    .nav-links a {
        display: block;
        padding: var(--kide-space-2) var(--kide-space-3);
        color: var(--kide-ink-muted);
        text-decoration: none;
        border-radius: var(--kide-radius-md);
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .nav-links a:hover {
        background: var(--kide-paper);
        color: var(--kide-ink-primary);
    }

    .nav-links a.active {
        background: var(--kide-ice-light);
        color: var(--kide-ice-deep);
    }

    .nav-footer {
        border-top: 1px solid var(--kide-ice-light);
        padding-top: var(--kide-space-4);
        display: flex;
        flex-direction: column;
        gap: var(--kide-space-2);
    }

    .logout-link {
        color: var(--kide-danger);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .back-link {
        color: var(--kide-ink-muted);
        text-decoration: none;
        font-size: 0.875rem;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>
