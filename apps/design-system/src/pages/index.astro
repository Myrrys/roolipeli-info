---
import DocsLayout from '../layouts/DocsLayout.astro';
---

<DocsLayout title="Design Tokens - Roolipeli.info Design System">
  <section>
    <h2>Color Tokens</h2>

    <h3>Primitive Colors</h3>
    <div class="token-grid">
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-blue-500);">
        </div>
        <code>--color-blue-500</code>
        <span class="value">#3b82f6</span>
      </div>
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-gray-900);">
        </div>
        <code>--color-gray-900</code>
        <span class="value">#111827</span>
      </div>
      <div class="token-card">
        <div
          class="swatch"
          style="background-color: var(--color-white); border: 1px solid var(--color-border);"
        >
        </div>
        <code>--color-white</code>
        <span class="value">#ffffff</span>
      </div>
    </div>

    <h3>Semantic Colors</h3>
    <div class="token-grid">
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-bg-primary);">
        </div>
        <code>--color-bg-primary</code>
        <span class="value">Primary background</span>
      </div>
      <div class="token-card">
        <div
          class="swatch"
          style="background-color: var(--color-bg-secondary);"
        >
        </div>
        <code>--color-bg-secondary</code>
        <span class="value">#f9fafb</span>
      </div>
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-accent);">
        </div>
        <code>--color-accent</code>
        <span class="value">Accent color</span>
      </div>
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-text-body);">
        </div>
        <code>--color-text-body</code>
        <span class="value">Body text</span>
      </div>
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-text-muted);">
        </div>
        <code>--color-text-muted</code>
        <span class="value">#6b7280</span>
      </div>
      <div class="token-card">
        <div class="swatch" style="background-color: var(--color-border);">
        </div>
        <code>--color-border</code>
        <span class="value">#e5e7eb</span>
      </div>
    </div>
  </section>

  <section>
    <h2>Spacing Scale</h2>
    <p class="section-description">
      Based on <code>--spacing-base: 0.25rem</code>
    </p>
    <div class="spacing-examples">
      <div class="spacing-item">
        <div class="spacing-box" style="width: var(--spacing-xs);"></div>
        <code>--spacing-xs</code>
        <span class="value">0.25rem (4px)</span>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: var(--spacing-sm);"></div>
        <code>--spacing-sm</code>
        <span class="value">0.5rem (8px)</span>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: var(--spacing-md);"></div>
        <code>--spacing-md</code>
        <span class="value">1rem (16px)</span>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: var(--spacing-lg);"></div>
        <code>--spacing-lg</code>
        <span class="value">1.5rem (24px)</span>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: var(--spacing-xl);"></div>
        <code>--spacing-xl</code>
        <span class="value">2rem (32px)</span>
      </div>
    </div>
  </section>

  <section>
    <h2>Typography</h2>
    <div class="typography-example">
      <p style="font-family: var(--font-family-sans);">
        The quick brown fox jumps over the lazy dog
      </p>
      <code>--font-family-sans</code>
      <span class="value">system-ui, -apple-system, sans-serif</span>
    </div>
  </section>
</DocsLayout>

<style>
  section {
    margin-bottom: var(--spacing-xl);
  }

  h2 {
    color: var(--color-text-body);
    margin-bottom: var(--spacing-md);
  }

  h3 {
    color: var(--color-text-muted);
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    font-size: 1rem;
  }

  .section-description {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .token-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .token-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .swatch {
    width: 100%;
    height: 80px;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .value {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .spacing-examples {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .spacing-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .spacing-box {
    height: 32px;
    background-color: var(--color-accent);
    border-radius: 4px;
  }

  .typography-example {
    padding: var(--spacing-md);
    background-color: var(--color-bg-primary);
    border-radius: 4px;
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .typography-example p {
    margin: 0;
    font-size: 1.25rem;
  }

  code {
    font-family: monospace;
    font-size: 0.875rem;
    color: var(--color-text-body);
    background-color: var(--color-bg-secondary);
    padding: 0.125rem 0.25rem;
    border-radius: 2px;
  }
</style>
