---
import '@roolipeli/design-system/preflight.css';
import '@roolipeli/design-system/tokens.css';
import '@roolipeli/design-system/grid.css';
import SiteHeader from '@roolipeli/design-system/components/SiteHeader.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <SiteHeader siteName="Kide Design System">
      <ul class="site-header__nav">
        <li><a href="/" class="site-header__link">Home</a></li>
        <li>
          <a
            href="/site-header"
            class="site-header__link site-header__link--active">Components</a
          >
        </li>
      </ul>
    </SiteHeader>
    <main class="grid-layout">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  body {
    font-family: var(--kide-font-sans);
    background-color: var(--kide-paper);
    color: var(--kide-ink-primary);
    margin: 0;
  }

  main {
    padding-top: var(--kide-space-6);
    padding-bottom: var(--kide-space-6);
  }

  header {
    margin-bottom: var(--kide-space-8);
    padding-bottom: var(--kide-space-3);
    border-bottom: 3px solid var(--kide-ice-light);
  }

  header h1 {
    font-family: var(--kide-font-serif);
    color: var(--kide-ink-header);
    letter-spacing: -0.02em;
    margin: 0;
  }

  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--kide-font-serif);
    color: var(--kide-ink-header);
    letter-spacing: -0.02em;
  }
</style>
