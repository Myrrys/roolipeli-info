{
  "name": "roolipeli-info",
  "version": "0.8.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter main-site dev",
    "build": "pnpm -r build",
    "test:unit": "TMPDIR=/tmp vitest run --passWithNoTests",
    "test:e2e": "pnpm --filter main-site exec playwright test && pnpm --filter design-system exec playwright test",
    "test": "pnpm test:unit && pnpm test:e2e",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:status": "supabase status",
    "db:push": "supabase db push --linked",
    "db:push:prod": "supabase link --project-ref kaxxtklysaqixmtiogse && supabase db push --linked && supabase link --project-ref bgoyrhohrldoedgqdcvm",
    "db:sync": "tsx scripts/sync-dev-data.ts",
    "ingest": "tsx scripts/ingest.ts",
    "set-admin": "tsx scripts/set-admin.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@supabase/supabase-js": "^2.93.1",
    "dotenv": "^17.2.3",
    "lefthook": "^2.0.15",
    "postgres": "^3.4.8",
    "supabase": "^2.72.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
